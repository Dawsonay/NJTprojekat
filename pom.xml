    <groupId>njt</groupId>
    <artifactId>NJTProjekat_MehanicarskaRadionica</artifactId>
    <version>1.0.0</version>
    <packaging>jar</packaging>

    <name>NJTProjekat_MehanicarskaRadionica</name>

